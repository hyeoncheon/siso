<div class="container">
<div id="flash-wrapper">
<% flash.each do |key, value| %>
  <div class="flash <%= key %> round"><%= value %></div>
<% end %>
</div>

<div id="page-body">
<% if user_signed_in? %>

  <%= yield %>

<% else %>
  <div id="login-dialog" class="siso-dialog">
    <h2 class="siso-dialog-head">Login</h2>
    <div class="siso-dialog-body">
      <span>Signin with</span>
      <%= link_to "LDAP", "/auth/ldap" %>,
      <%= link_to "OpenID", "/auth/open_id" %>
      or
      <%= link_to "Other", signin_services_path %>
    </div>
  </div>
<% end %>
</div>
<div id="page-tail-placeholder"></div>
</div>
</div>

<!-- page-tail placed outside of frame -->
<div id="page-tail">
  <ul>
    <li>SiSO - Member of Hyeoncheon, the Black Sky</li>
