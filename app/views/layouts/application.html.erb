<!DOCTYPE html>
<html>
<head>
  <title>SiSO</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="head">
  <div id="user">
  <% if user_signed_in? %>
    <div id="nav_user">
      <ul>
        <span><%= session[:name] %></span>
        <span><%= session[:mail] %></span>
	<li><%= link_to "settings", services_path %></li>
        <li><%= link_to "signout", signout_services_path %></li>
      </ul>
    </div>
  <% end %>
  </div>
  <h1 id="header">SiSO</h1>
  <span id="head_comment">Single Sign On service for Hyeoncheon Familey.</span>
</div>

<div id="flash">
<% flash.each do |key, value| %>
  <div class="flash <%= key %> round"><%= value %></div>
<% end %>
</div>

<div id="body">
<% if user_signed_in? %>
  <%= yield %>
<% else %>
  <h1 class="siso_dialog">Login</h1>
  <div id="loginbox" class="siso_dialog">
    <span>Signin with</span>
    <%= link_to "OpenID", "/auth/open_id" %>
    or
    <%= link_to "Other", signin_services_path %>
  </div>
<% end %>
</div>

</body>
</html>
